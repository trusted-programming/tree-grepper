    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tree-marker'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tree-marker",
                    "--package=tree-marker"
                ],
                "filter": {
                    "name": "tree-marker",
                    "kind": "bin"
                }
            },
            "args": ["ex/marker.rs"],
            "cwd": "${workspaceFolder}"
        },
    ]
}
